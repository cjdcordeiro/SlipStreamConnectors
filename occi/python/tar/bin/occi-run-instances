import warnings
warnings.filterwarnings("ignore", category=DeprecationWarning)

from slipstream.command.CloudClientCommand import main
from slipstream.command.RunInstancesCommand import RunInstancesCommand
from slipstream_occi.OcciClientCloud import OcciClientCloud
from slipstream_occi.OcciClientCommand import OcciClientCommand


class OcciRunInstances(RunInstancesCommand, OcciClientCommand):

    INSTANCE_TYPE_KEY = 'instance-type'
    NETWORK_ID_KEY = 'network-id'

    def __init__(self):
        super(OcciRunInstances, self).__init__()

    def set_cloud_specific_options(self, parser):
        OcciClientCommand.set_cloud_specific_options(self, parser)

        parser.add_option('--' + self.INSTANCE_TYPE_KEY, dest=self.INSTANCE_TYPE_KEY,
                          help='Instance type (resource template).',
                          default='', metavar='RESTPL')

        parser.add_option('--' + self.NETWORK_ID_KEY, dest=self.NETWORK_ID_KEY,
                          help='Network ID.',
                          default='', metavar='NETWORKID')

    def get_cloud_specific_node_inst_cloud_params(self):
        return {'instance.type': self.get_option(self.INSTANCE_TYPE_KEY),
                'network.id': self.get_option(self.NETWORK_ID_KEY)}

    def get_cloud_specific_mandatory_options(self):
        return OcciClientCommand.get_cloud_specific_mandatory_options(self) + \
               [self.INSTANCE_TYPE_KEY]


if __name__ == "__main__":
    main(OcciRunInstances)
