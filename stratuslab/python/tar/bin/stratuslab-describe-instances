from slipstream.command.CloudClientCommand import main
from slipstream.command.DescribeInstancesCommand import DescribeInstancesCommand
from slipstream_stratuslab.StratulabClientCommand import StratulabClientCommand


class StratuslabDescribeInstances(DescribeInstancesCommand, StratulabClientCommand):

    def __init__(self):
        super(StratuslabDescribeInstances, self).__init__()

    def _vm_get_state(self, cc, vm):
        return cc._vm_get_state(vm)


if __name__ == "__main__":
    main(StratuslabDescribeInstances)
